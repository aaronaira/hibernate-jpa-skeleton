<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="org.carworkshop">

        <class>org.carworkshop.entities.CabeceraDiagnostico</class>
        <class>org.carworkshop.entities.Cita</class>
        <class>org.carworkshop.entities.Cliente</class>
        <class>org.carworkshop.entities.ClienteFacturaRecibo</class>
        <class>org.carworkshop.entities.ClienteFacturaReciboId</class>
        <class>org.carworkshop.entities.Empelado</class>
        <class>org.carworkshop.entities.Encuesta</class>
        <class>org.carworkshop.entities.FacturaCabecera</class>
        <class>org.carworkshop.entities.FacturaLinea</class>
        <class>org.carworkshop.entities.FacturaLineaId</class>
        <class>org.carworkshop.entities.FacturaLineaMo</class>
        <class>org.carworkshop.entities.FacturaLineaPieza</class>
        <class>org.carworkshop.entities.FacturaLineaPiezaId</class>
        <class>org.carworkshop.entities.LineaDiagnostico</class>
        <class>org.carworkshop.entities.LineaDiagnosticoId</class>
        <class>org.carworkshop.entities.Login</class>
        <class>org.carworkshop.entities.ManoobraOt</class>
        <class>org.carworkshop.entities.ManoobraOtId</class>
        <class>org.carworkshop.entities.MedioPago</class>
        <class>org.carworkshop.entities.OtCabecera</class>
        <class>org.carworkshop.entities.OtTotale</class>
        <class>org.carworkshop.entities.Pieza</class>
        <class>org.carworkshop.entities.PiezasOt</class>
        <class>org.carworkshop.entities.PiezasOtId</class>
        <class>org.carworkshop.entities.PrefCliente</class>
        <class>org.carworkshop.entities.PrefClienteId</class>
        <class>org.carworkshop.entities.Recepcion</class>
        <class>org.carworkshop.entities.Recibo</class>
        <class>org.carworkshop.entities.ReciboId</class>
        <class>org.carworkshop.entities.Tarifa</class>
        <class>org.carworkshop.entities.TipoVehiculo</class>
        <class>org.carworkshop.entities.TotalesDiagnostico</class>
        <class>org.carworkshop.entities.TotalesFactura</class>
        <class>org.carworkshop.entities.Vehiculo</class>



        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/carworkshop"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>

</persistence>